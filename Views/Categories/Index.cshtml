@model IEnumerable<ZlagodaPrj.Models.Category>

<h1>Categories list</h1>

<div class="container p-3">
    <table class="table table-bordered table-striped" style="width:auto">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td width="75%">@category.Name</td>
                    <td width="25%">
                        <a class="btn btn-primary" asp-action="Update" asp-route-id="@category.Number">Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@category.Number">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-controller="Categories" asp-action="Create" class="btn btn-primary">Create new Category</a>
    </div>
</div>
